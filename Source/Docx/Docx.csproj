<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>netstandard2.1</TargetFramework>
        <LangVersion>10.0</LangVersion>
        <PackageId>Docx.TemplateEngine</PackageId>
        <Authors>Proxoft</Authors>
        <Company>Proxoft</Company>
        <Product>Docx.TemplateEngine</Product>
        <PackageIcon>128x128 Transformer coloured final.png</PackageIcon>
        <PackageProjectUrl>https://github.com/proxoft/Docx.TemplateEngine</PackageProjectUrl>
        <Description>Engine to create docx documents from templated docx documents. The templates are created using custom syntax placeholders directly in the text of the docx.</Description>
        <RepositoryUrl>https://github.com/proxoft/Docx.TemplateEngine</RepositoryUrl>
        <AssemblyName>Proxoft.Docx.TemplateEngine</AssemblyName>
        <RootNamespace>Proxoft.Docx.TemplateEngine</RootNamespace>
        <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
        <Version>0.0.3</Version>
        <PackageLicenseExpression>MIT</PackageLicenseExpression>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="DocumentFormat.OpenXml" Version="2.12.1" />
        <PackageReference Include="Microsoft.Extensions.Logging" Version="5.0.0" />
        <PackageReference Include="Newtonsoft.Json" Version="12.0.3" />
        <PackageReference Include="System.Drawing.Common" Version="5.0.0" />
    </ItemGroup>

    <ItemGroup>
        <None Include="Resources\Icons\128x128 Transformer coloured final.png">
            <Pack>True</Pack>
            <PackagePath></PackagePath>
        </None>
    </ItemGroup>

</Project>
